<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".TeacherActivity">

    <include layout="@layout/app_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <!--<androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-30dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/ic_header_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/imgHeader"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="30dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="true"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="31dp"
                    app:cardElevation="20dp"
                    card_view:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:id="@+id/llMessages"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/blue_card_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llMessageIcon"
                            android:layout_width="69dp"
                            android:layout_height="69dp"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ellipse_one"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_messages_icon" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="Messages"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llMessageCount"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/ellipse_three"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_messageCount"
                                android:layout_width="13dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:textSize="21sp"
                                android:text="-"
                                android:textColor="#5F99FE"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="true"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="31dp"
                    app:cardElevation="20dp"
                    card_view:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/blue_card_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llInvitationIcon"
                            android:layout_width="69dp"
                            android:layout_height="69dp"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ellipse_one"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_invitation_icon" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="Invitations"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llInvitationCount"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/ellipse_three"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_InvitationCount"
                                android:layout_width="13dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:textSize="21sp"
                                android:text="-"
                                android:textColor="#5F99FE"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="true"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="31dp"
                    app:cardElevation="20dp"
                    card_view:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/blue_card_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llScheduleIcon"
                            android:layout_width="69dp"
                            android:layout_height="69dp"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ellipse_one"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_calneder_icon" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="Schedules"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llScheduleCount"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/ellipse_three"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_scheduleCount"
                                android:layout_width="13dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:textSize="21sp"
                                android:text="-"
                                android:textColor="#5F99FE"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="true"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="31dp"
                    app:cardElevation="20dp"
                    card_view:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:id="@+id/llLogout"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/blue_card_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llLogoutIcon"
                            android:layout_width="69dp"
                            android:layout_height="69dp"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ellipse_one"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/ic_logout_icon" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="Logout"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llLogoutCount1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/ellipse_three"
                            android:gravity="center"
                            android:visibility="invisible">

                            <TextView
                                android:id="@+id/tv_logoutCount"
                                android:layout_width="13dp"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:textSize="21sp"
                                android:text="-"
                                android:textColor="#5F99FE"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>

    <!--</androidx.core.widget.NestedScrollView>-->
    </ScrollView>
</LinearLayout>