<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_receivedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/received_message_background"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp">

        <com.ops.flipclass.view.FCTextView
            android:id="@+id/tv_receivedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is received message"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:textStyle="@integer/Poppins_Medium" />


    </RelativeLayout>

    <com.ops.flipclass.view.FCTextView
        android:id="@+id/tv_receivedMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_receivedMessage"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:paddingStart="2dp"
        android:text="6.30PM"
        android:textColor="#9A9898"
        android:textSize="11sp"
        app:textStyle="@integer/Poppins_Regular" />

</RelativeLayout>