<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragement.MyEducationFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="25dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_location_icon"/>

            <com.ops.flipclass.view.FCTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="University/School"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:textStyle="@integer/Poppins_Medium"/>

            <com.ops.flipclass.view.FCTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="end"
                android:text="ABC University"
                android:textColor="#1D2939"
                android:textSize="13sp"
                app:textStyle="@integer/Poppins_Regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_clock_icon"/>

            <com.ops.flipclass.view.FCTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Period"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:textStyle="@integer/Poppins_Medium"/>

            <com.ops.flipclass.view.FCTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="end"
                android:text="Oct 2021 - Oct 2021"
                android:textColor="#1D2939"
                android:textSize="13sp"
                app:textStyle="@integer/Poppins_Regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_black_cap_icon"/>

            <com.ops.flipclass.view.FCTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Qualification"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:textStyle="@integer/Poppins_Medium"/>

            <com.ops.flipclass.view.FCTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="end"
                android:text="ABC Qualification"
                android:textColor="#1D2939"
                android:textSize="13sp"
                app:textStyle="@integer/Poppins_Regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_referrences_icon"/>

            <com.ops.flipclass.view.FCTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="References"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:textStyle="@integer/Poppins_Medium"/>

            <com.ops.flipclass.view.FCTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="end"
                android:text="ABC References"
                android:textColor="#1D2939"
                android:textSize="13sp"
                app:textStyle="@integer/Poppins_Regular"/>

        </LinearLayout>

        <com.ops.flipclass.view.FCTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Description"
            android:textColor="#020916"
            android:textSize="13sp"
            android:textStyle="bold"
            app:textStyle="@integer/Poppins_Medium"/>

        <com.ops.flipclass.view.FCTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/my_education_description"
            android:textColor="#1D2939"
            android:textSize="13sp"
            app:textStyle="@integer/Poppins_Regular"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>